@model List<ResultTodoDto>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo Projesi</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                @await Component.InvokeAsync("_HomeCreate")
            </div>

            <div class="col-md-6">
                <h2>Todo Listesi</h2>
                <ul class="list-group" id="todoList">
                    

                </ul>
            </div>
        </div>
    </div>

   
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        
        function loadTodoList() {
            $.ajax({
                url: '@Url.Action("GetAll", "Home")',
                type: 'get',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (result) {

             $('#todoList').empty();
                    for (var i = 0; i < result.length; i++) {
                        $('#todoList').append(`<li class="list-group-item d-flex justify-content-between align-items-center">
                                ${result[i].content}
                                <a class="btn btn-danger btn-sm" data-id="${result[i].id}" href="#"> Sil</a>
                            </li>`);
                    }
                },
                error: function (err) {
                    console.log("Hata:", err);
                }
            });
        }

        $(document).ready(function () {
            loadTodoList(); 
        });

        $(document).on('click', '.btn-danger', function (e) {
            e.preventDefault();
            var button = $(this);
            var Id = button.data('id');
            $.ajax({
                type: 'get',
                url: '@Url.Action("Delete", "Home")',
                data: { Id: Id },
                success: function () {
                  
                    loadTodoList();
                },
                error: function () {
                    console.log("Bir hata oluştu");
                }
            });
        });
    </script>
</body>
</html>
